{
  "mcpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"],
      "type": "stdio",
      "env": {},
      "description": "Chrome DevTools 集成 - 用于浏览器调试、性能分析、网络监控"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"],
      "type": "stdio",
      "env": {},
      "description": "跨浏览器自动化测试 - 用于 E2E 测试、UI 测试、浏览器自动化"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/yanyinxi/工作/code/Java/claudecode/claude-dev-team"
      ],
      "type": "stdio",
      "env": {},
      "description": "文件系统访问 - 安全的文件读写操作，支持项目文件管理"
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "type": "stdio",
      "env": {},
      "description": "知识图谱记忆 - 跨会话持久化上下文，记住项目知识和决策"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "type": "stdio",
      "env": {},
      "description": "结构化思维 - 通过动态思维序列增强复杂问题解决能力"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "type": "stdio",
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "description": "GitHub 集成 - PR 管理、Issue 跟踪、代码审查、仓库操作（需配置 token）"
    }
  }
}
